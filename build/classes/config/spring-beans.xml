<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [
<!ENTITY contextInclude SYSTEM "org/springframework/web/context/WEB-INF/contextInclude.xml">
]>

<beans>
    <!-- Spring Bean -->
	<bean id="userDao" class="com.pj.dao.UserDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="viewManager" class="com.pj.service.ViewManager">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="confgService" class="com.pj.service.ConfgService">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="calculateService" class="com.pj.service.CalculateService">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="userManagerBase" class="com.pj.service.UserManagerImpl">
		<property name="userDao" ref="userDao"></property>
	</bean>
	
	<!-- parent为transactionBese，表示支持事务 -->
	<bean id="userManager" parent="transactionBese">
		<property name="target" ref="userManagerBase"></property>
	</bean>
	
</beans>
